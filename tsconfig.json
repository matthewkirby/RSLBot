{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": "./"
  },
  "files": [
    "src/Bot.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "plando-random-settings"
  ],
}